@model IEnumerable<BlogSite.Models.Journal>

@helper ReduceContent(string text)
{
    if(text.Length > 300)
    {
        @text.Substring(0, 300);

}

    else
    {
        @text;
    }
}
<div class="blog-posts col-blog">
    @foreach (BlogSite.Models.Journal journal in Model)
    {

    <div class="post row">
        <div class="col-sm-4">
            <figure>
                <a href="blog-post.html">
                    <div class="text-overlay">
                        <div class="info"><span>Read All</span></div>
                    </div>
                    <img src="style/images/art/b1.jpg" alt="" />
                </a>
            </figure>
        </div>
        <div class="col-sm-8 post-content">
            <div class="meta"><span class="date">@journal.CreationDate.ToShortDateString()</span><span class="comments"><a href="#">@journal.Comments.Count<i class="icon-chat-1"></i></a></span></div>
            <h2 class="post-title"><a href="blog-post.html">@journal.Title</a></h2>
            <p> @ReduceContent(journal.ContentPart)</p> 
        </div>
      </div>
    }
</div>
